<VotingApp>:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    Label:
        text: "Voting Application"
        font_size: 24
        size_hint_y: None
        height: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        TextInput:
            id: voter_id
            hint_text: "Enter your name or ID"
            multiline: False

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Vote Candidate 1"
            on_press: root.vote_candidate('candidate_1', voter_id.text)

        Label:
            text: str(root.candidate_1_votes)
            size_hint_x: None
            width: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Vote Candidate 2"
            on_press: root.vote_candidate('candidate_2', voter_id.text)

        Label:
            text: str(root.candidate_2_votes)
            size_hint_x: None
            width: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Vote Candidate 3"
            on_press: root.vote_candidate('candidate_3', voter_id.text)

        Label:
            text: str(root.candidate_3_votes)
            size_hint_x: None
            width: 40

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Admin Login"
            on_press: root.open_admin_login()
            opacity: 1 if not root.is_admin else 0
            disabled: root.is_admin

        Button:
            text: "Admin Logout"
            on_press: root.admin_logout()
            opacity: 1 if root.is_admin else 0
            disabled: not root.is_admin

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        spacing: 10

        Button:
            text: "Reset Votes"
            on_press: root.reset_votes()
            opacity: 1 if root.is_admin else 0
            disabled: not root.is_admin
            size_hint_y: None
            height: 50
